{
  "name": "bcc-directus-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "start.js",
  "engines": {
    "node": "18.2.1"
  },
  "type": "module",
  "scripts": {
    "start": "node start.js",
    "init": "op run --env-file=local.env -- sh local_init.sh",
    "local": "op run --env-file=local.env -- node start.js",
    "build": "tsc",
    "dev": "tsc --watch --sourceMap true",
    "spec": "tsoa spec",
    "postinstall": "tsc --project ./shared/tsconfig.json --rootDir ./shared/src --module ES2015 --outDir ./shared/dist/esm",
    "clean": "rimraf extensions/dtos extensions/endpoints extensions/hooks extensions/services extensions/types",
    "export": "op run --env-file=local.env -- npx directus schema-sync export",
    "import": "op run --env-file=local.env -- npx directus schema-sync import",
    "migrate": "op run --env-file=local.env -- npx directus database migrate:latest",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/express": "^4.17.14",
    "@types/faker": "^6.6.9",
    "@types/node": "^18.19.9",
    "gts": "^3.1.1",
    "tscpaths": "^0.0.9",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@bcc-directus-boilerplate/shared": "file:shared",
    "@directus/extensions": "^0.2.1",
    "@directus/types": "^11.0.3",
    "@types/fs-extra": "^9.0.13",
    "directus": "^10.8.3",
    "directus-extension-schema-sync": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "knex": "^3.1.0",
    "nodemon": "^2.0.22",
    "pg": "^8.8.0",
    "tsoa": "^4.1.3"
  }
}
