{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node16",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./extensions",
    "baseUrl": "./",
    "strict": false,
    "types": ["node"],
    "lib": ["es2020"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "packages", "extensions"]
}